<script src="{{ asset('build/js/global.js') }}"></script>
<script>
    function onHover(x) {
        $(x).children("i").css("display", "none");
        $(x).children("p").css("display", "inline-block");
        $(x).children("p").css({bottom: -($(x).height() - $(x).children("p").height()) / 2})
    }
</script>
<script>
    function offHover(x) {
        $(x).children("i").css("display", "inline-block");
        $(x).children("p").css("display", "none");

    }
</script>
</html>